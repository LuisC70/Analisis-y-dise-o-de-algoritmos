public class BusquedaLineal {

    // Procedimiento básico: busca un valor dentro de un arreglo
    public int buscar(int[] arreglo, int objetivo) {

        // Recorremos cada posición del arreglo
        for (int i = 0; i < arreglo.length; i++) {

            // Si encontramos el objetivo, devolvemos el índice
            if (arreglo[i] == objetivo) {
                return i;
            }
        }

        // Si llegamos aquí, no se encontró el objetivo
        return -1;
    }
}
